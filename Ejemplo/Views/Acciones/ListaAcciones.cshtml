    <link href="~/Content/TableSorterStyle.css" rel="stylesheet" />º
    <link href="~/Content/colorbox/colorbox.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.colorbox-min.js"></script>
    <script src="../../Scripts/jquery.tablesorter.filer.js"></script>
    <link href="~/Content/Table_Style.css" rel="stylesheet" />
    <link href="~/Content/TableStyle.css" rel="stylesheet" />
    <script type="text/javascript">
        $(document).ready(function () {
            ConstruirTabla();
            $(".ajax").colorbox();
            $('.eliminarAccion').on('click', function (e) {
                alert("Se hizo click");
                if (confirm("¿Estás seguro de eliminar esta acción D:?")) {
                    e.preventDefault();
                    var url = $(this).attr('href');
                    $.ajax({
                        type: 'GET',
                        url: url,
                        success: function (data) {
                            if (data.Exito == true) {
                                alert("Acción eliminada con éxito");
                                /*var i = url.split("=");
                                $("#" + i[1]).remove();
                                ConstruirTabla();*/
                                window.open("/Acciones/ListaAcciones", "_self");
                            }else
                                alert("Error al eliminar la acción");
                        }, error: function (data) {
                            alert("No se puede eliminar la acción");
                        }
                    });
                } else
                    return false;
            });
        });
        function ConstruirTabla() {
            $("#tableOne").tablesorter({ debug: false, sortList: [], widgets: ['zebra'] })
                           .tablesorterPager({ container: $("#pagerOne"), positionFixed: false })
                           .tablesorterFilter({
                               filterContainer: $("#filterBoxOne"),
                               filterClearContainer: $("#filterClearOne"),
                               filterColumns: [0, 1, 2, 3, 4],  // Agregar tantos como campos necesarios
                               filterCaseSensitive: false
                           });
        }
    </script>        
}